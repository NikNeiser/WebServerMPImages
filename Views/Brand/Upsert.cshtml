@model WebServerMPImages.Models.Brand

@{
	var title = "Create new brand";
}

<form method="post" enctype="multipart/form-data">
	@if (Model.Id != 0)
	{
		title = "Edite brand";
		<input asp-for="@Model.Id" hidden/>
	}
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-info pl-3">@title</h2>
		</div>
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Name" class="form-control"/>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>

				<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.BrandType"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.BrandType" asp-items="Html.GetEnumSelectList<BrandType>()" class="form-control">
                            <option selected disabled>--Select Category--</option>
                        </select>
                        <span asp-validation-for="@Model.BrandType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-primary w-100" value="Update"/>
                            }
                            else
                            {
                                <input type="submit" class="btn btn-primary w-100" value="Create"/>
                            }
                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-info w-100">Back</a>
                        </div>
                    </div>
                </div>

			</div>		
		</div>
	</div>
</form>