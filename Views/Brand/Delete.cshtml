@model WebServerMPImages.Models.Brand


<form method="post" enctype="multipart/form-data">
	<input asp-for="@Model.Id" hidden/>
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-info pl-3">Remove Brand</h2>
		</div>
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Name" disabled class="form-control"/>
                    </div>
                </div>

				<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.BrandType"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.BrandType" asp-items="Html.GetEnumSelectList<BrandType>()" disabled class="form-control">                            
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">                           
                            <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-info w-100">Back</a>
                        </div>
                    </div>
                </div>

			</div>		
		</div>
	</div>
</form>